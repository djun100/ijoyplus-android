<RelativeLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent"
	>
	<RelativeLayout
    android:layout_width="fill_parent"
  	android:layout_height="wrap_content"
  	android:id="@+id/title" 
  	android:background="@color/blue"
  	android:gravity="center_vertical" 
    >
	<TextView
	     android:id="@+id/title_text"
	     android:layout_width="wrap_content" 
	     android:layout_height="wrap_content" 
	     android:text="@string/linglun"
	     android:layout_centerInParent="true"
	     android:textSize="20sp"		
		android:textColor="@color/white" /> 
	<Button 
		 android:id="@+id/share_pinglun"
		 android:layout_width="wrap_content" 
	     android:layout_height="wrap_content"
	     android:layout_alignParentRight="true"
	     android:layout_centerVertical="true"
	     android:layout_marginRight="5dp"
	     android:text="@string/linglun"
		/>
	<Button 
		 android:id="@+id/login_goback"
		 android:layout_width="wrap_content" 
	     android:layout_height="wrap_content"
	     android:layout_alignParentLeft="true"
	     android:layout_centerVertical="true"
	     android:layout_marginLeft="5dp"
	     android:text="@string/goback"
		/> 
	</RelativeLayout>
	<ScrollView    
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
	        <TextView 
		        android:layout_width="wrap_content" 
		    	android:layout_height="wrap_content"
		    	android:text="@string/tongbudao"
		    	android:textSize="20sp"
		    	android:textColor="@color/white"
		    	android:id="@+id/text_tb"
		    	android:layout_alignParentBottom="true"
        	/>
	        <Button
	             android:id="@+id/xinlang_button"
	             android:layout_toRightOf="@id/text_tb"
	             android:layout_width="wrap_content" 
		    	 android:layout_height="wrap_content"
		    	 android:text="新浪"
		    	 android:layout_alignParentBottom="true"
	            />
	        <Button
	             android:id="@+id/qq_button"
	             android:layout_width="wrap_content" 
		    	 android:layout_height="wrap_content"
		    	 android:text="腾讯"
		    	 android:layout_toRightOf="@id/xinlang_button"
		    	 android:layout_alignParentBottom="true"
	            />
	        <TextView 
	            android:id="@+id/tv_text_limit"
	            android:layout_alignParentRight="true"
		        android:layout_width="wrap_content" 
		    	android:layout_height="wrap_content"
		    	android:text="还可以输入120字"
		    	android:textSize="15sp"
		    	android:textColor="@color/white"
		    	android:layout_alignParentBottom="true"
        	/>
<RelativeLayout 
     android:layout_below="@id/title"
	 android:layout_above="@id/xinlang_button"
	 android:layout_width="fill_parent" 
	 android:layout_height="fill_parent"
	 android:background="@color/white"
    >
	<ImageView
	 android:id="@+id/image_moves"
	 android:layout_width="wrap_content" 
	 android:layout_height="wrap_content"
	 android:src="@drawable/ic_launcher"
	 android:layout_alignParentRight="true"
	    />
<com.joy.Tools.MyEditText
     android:id="@+id/fx_pl_edit"
     android:layout_toLeftOf="@id/image_moves"
     android:layout_width="match_parent" 
	 android:layout_height="fill_parent"
	 android:textColor="@color/black"
	 android:background="@color/white"
	 android:maxLength="120"
	 android:paddingLeft="3sp"
	 android:gravity="left|top"
    />

</RelativeLayout>
</RelativeLayout>