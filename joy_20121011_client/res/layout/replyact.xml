<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    >
<RelativeLayout
    android:layout_width="fill_parent"
  	android:layout_height="wrap_content"
  	android:id="@+id/title" 
  	android:background="@drawable/title"
    >
<TextView
     android:layout_width="wrap_content" 
     android:layout_height="wrap_content" 
     android:text="@string/all_reply"
     android:layout_centerInParent="true"
     android:textSize="20sp"		
	android:textColor="@color/white" /> 
	 <RelativeLayout 
		    android:id="@+id/login_goback"
		    android:layout_alignParentLeft="true"
		    android:layout_marginLeft="10dp"
		    android:layout_width="64dp"
		    android:layout_height="wrap_content"
		    android:layout_centerVertical="true"
		    android:background="@drawable/btn_top_left"
    >
		 <TextView
		     android:layout_width="wrap_content" 
		     android:layout_height="wrap_content" 
		     android:text="@string/goback"
		     android:layout_alignParentRight="true"
		     android:layout_marginRight="12dp"
		     android:textSize="15sp"		
		     android:layout_centerVertical="true"
			 android:textColor="@color/white" />   
	</RelativeLayout>
</RelativeLayout>
<LinearLayout
    		 android:id="@+id/reply_layout"
	         android:layout_width="fill_parent"
		     android:layout_height="wrap_content"
		     android:layout_alignParentBottom="true"
		     android:layout_marginBottom="5sp"
		     android:gravity="center"
		     android:orientation="horizontal"
	        >
	        <EditText 
			    android:id="@+id/reply_edit"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:background="@drawable/editbg"
			    android:textSize="15sp"
			    android:paddingLeft="10dp"
			    android:textColor="@color/white"
			    android:singleLine="true"
			    android:layout_weight="1"
			    />
	        <Button
	            android:id="@+id/reply_button"
	            android:text="@string/reply" 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:background="@drawable/btn_sousuo"
	            android:textColor="@color/white"
	            />
	    </LinearLayout>
	    <ScrollView 
	        android:id="@+id/reply_listview"
	        android:layout_width="fill_parent"
			android:layout_height="fill_parent"
	        android:layout_above="@id/reply_layout"
	        android:layout_below="@id/title"
	        android:scrollbars="none"
			android:fadingEdge="none"
	        >
	        <LinearLayout
	             android:id="@+id/reply_linearlayout"
	             android:layout_width="fill_parent"
			     android:layout_height="fill_parent"
			     android:orientation="vertical"
	            >
	            
	        </LinearLayout>
	    </ScrollView>
</RelativeLayout>
