<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:background="#333333"
    >
<RelativeLayout
    android:layout_width="fill_parent"
  	android:layout_height="wrap_content"
  	android:id="@+id/title" 
  	android:background="@color/blue"
  	android:gravity="center_vertical" 
    >
<TextView
     android:layout_width="wrap_content" 
     android:layout_height="wrap_content" 
     android:text="@string/detail"
     android:layout_centerInParent="true"
     android:textSize="20sp"		
	android:textColor="@color/white" /> 
<Button 
	 android:id="@+id/share"
	 android:layout_width="wrap_content" 
     android:layout_height="wrap_content"
     android:layout_alignParentRight="true"
     android:layout_centerVertical="true"
     android:layout_marginRight="5dp"
     android:text="分享"
	/> 
	<Button 
	 android:id="@+id/login_goback"
	 android:layout_width="wrap_content" 
     android:layout_height="wrap_content"
     android:layout_alignParentLeft="true"
     android:layout_centerVertical="true"
     android:layout_marginLeft="5dp"
     android:text="@string/goback"
	/> 
</RelativeLayout>
   
<LinearLayout
    		android:id="@+id/more_button"
	         android:layout_width="fill_parent"
		     android:layout_height="wrap_content"
		     android:layout_alignParentBottom="true"
		     android:gravity="center"
		     android:orientation="horizontal"
	        >
	        <Button
	            android:id="@+id/recommend"
	            android:text="推荐" 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            />
	        <Button
	            android:id="@+id/seen"
	            android:text="看过" 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            />
	        <Button
	            android:id="@+id/favorite"
	            android:text="收藏" 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            />
	        <Button
	            android:id="@+id/comment"
	            android:text="评论" 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            />
	    </LinearLayout>


<com.joy.view.PullToRefreshView
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:id="@+id/detail_main_pull_refresh_view"
    android:layout_below="@id/title"
    android:layout_above="@id/more_button"
    android:orientation="vertical"
    >
<ScrollView
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:fadingEdge="none"
    android:scrollbars="none">
	<LinearLayout 
	    android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
    	>
	    <ImageView 
		    android:id="@+id/detail_beijing"
		    android:layout_width="fill_parent"
		    android:layout_height="150dp"
		    android:background="@drawable/welcome"
	    />
	    <TextView
	         android:id="@+id/detail_Move_Name"
	         android:layout_width="wrap_content"
		     android:layout_height="wrap_content"
		     android:text="冰川时代"
		     android:textColor="@color/white"
		     android:maxLines="1"
		     android:singleLine="true"
		     android:textSize="18sp"
		     android:layout_marginTop="3dp"
		     android:layout_marginLeft="5dp"
	        />
	    <RelativeLayout 
	        android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
	        >
	        <TextView 
	            android:id="@+id/dou_nub"
	            android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textColor="@color/white"
		        android:background="#494949"
		        android:textSize="18dp"
		        android:text="2012"
		        android:layout_gravity="left"
		        android:layout_marginLeft="5dp"
	            />
	        <TextView 
	            android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textColor="@color/white"
		        android:background="#292929"
		        android:textSize="18dp"
		        android:text="豆"
		        android:layout_toRightOf="@id/dou_nub"
	            />
	        <TextView 
	            android:id="@+id/briefintroduction"
	            android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textColor="@color/white"
		        android:background="#494949"
		        android:textSize="18dp"
		        android:text="简介"
		        android:layout_alignParentRight="true"
		        android:layout_marginRight="5dp"
	            />
	    </RelativeLayout>
	    
	    <RelativeLayout 
	        android:layout_marginTop="3dp"
	        android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
	        >
	        <TextView 
	            android:id="@+id/detail_seen_nub"
	            android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textColor="@color/white"
		        android:background="#494949"
		        android:textSize="18dp"
		        android:text="3602"
		        android:layout_gravity="left"
		        android:layout_marginLeft="5dp"
	            />
	        <TextView 
	            android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textColor="@color/white"
		        android:background="#292929"
		        android:textSize="18dp"
		        android:text="看过"
		        android:layout_toRightOf="@id/detail_seen_nub"
	            />
	         <TextView 
	            android:id="@+id/detail_favorite"
	            android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textColor="@color/white"
		        android:background="#292929"
		        android:textSize="18dp"
		        android:text="收藏"
		        android:layout_alignParentRight="true"
		        android:layout_marginRight="5dp"
	            />
	        <TextView 
	            android:id="@+id/detail_favorite_nub"
	            android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textColor="@color/white"
		        android:background="#494949"
		        android:textSize="18dp"
		        android:text="3601"
		        android:layout_toLeftOf="@id/detail_favorite"
	            />
	    </RelativeLayout>
	    <TextView
	            android:id="@+id/detail_drama"
	            android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textColor="#969696"
		        android:text="@string/drama"
		        android:textSize="13dp"
		        android:layout_marginTop="3dp"
		        android:layout_marginLeft="5dp"
		        android:visibility="visible"
	        />
	    <LinearLayout
	         	android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:id="@+id/myGridview"
		        android:orientation="vertical"
		        android:gravity="center"
	        >
	    </LinearLayout>
	    <!-- <com.joy.Tools.MyGridView 
		    android:id="@+id/myGridview"
		    android:numColumns="auto_fit" 
		    android:layout_width="fill_parent"   
		    android:layout_height="wrap_content"  
		    android:verticalSpacing="1dip"  
		    android:horizontalSpacing="1dip"  
		    android:columnWidth="90dp"  
		    android:stretchMode="columnWidth"  
		    android:gravity="center"
		    android:visibility="visible"
        >
	        
    </com.joy.Tools.MyGridView> -->
	    <TextView
	            android:id="@+id/detail_comment"
	            android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textColor="#969696"
		        android:text="@string/usercomment"
		        android:textSize="13dp"
		        android:layout_marginTop="3dp"
		        android:layout_marginLeft="5dp"
	        />
	    <LinearLayout
	         android:id="@+id/detail_all_comment"
	         android:layout_width="fill_parent"
		     android:layout_height="fill_parent"
		     android:orientation="vertical"
	        >
	        
	    </LinearLayout>
	    
	</LinearLayout>
</ScrollView>
</com.joy.view.PullToRefreshView>
</RelativeLayout>
