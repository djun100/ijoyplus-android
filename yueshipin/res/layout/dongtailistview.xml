    <ImageView 
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:background="@drawable/head"
        android:id="@+id/dongtailistview_head" 
        android:layout_marginLeft="10dp"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp"
        android:focusable="true"
        />
    <LinearLayout 
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@id/dongtailistview_head"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:id="@+id/dongtailistview_line"
        android:layout_marginTop="10dp"
        >
    <TextView 
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="15sp" 
        android:textColor="@color/white"
        android:id="@+id/dongtailistview_who" 
        android:text="who"
        />
    <TextView 
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="15sp" 
        android:textColor="@color/grey"
        android:id="@+id/dongtailistview_what" 
        android:text="what"
        />
    <ImageView 
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/dongtailistview_img" 
        android:background="@drawable/pic_bg"
        android:layout_marginTop="5dp"
        />
    </LinearLayout>
    
<RelativeLayout 
    android:id="@+id/rel_time"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_toRightOf="@id/dongtailistview_head"
    android:layout_below="@id/dongtailistview_line"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="5dp"
    >
    <TextView 
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="15sp" 
        android:textColor="@color/grey"
        android:id="@+id/dongtailistview_time" 
        android:text="time"
        />
</RelativeLayout>
<RelativeLayout 
    android:id="@+id/dongtailistview_rel" 
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:padding="10dp"
    android:layout_alignParentRight="true"
    android:layout_below="@id/dongtailistview_line"
    >

<TextView
    android:id="@+id/dongtailistview_how"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="how"
    android:textColor="@color/grey"
    android:textSize="15sp"
    android:visibility="gone" />
    
</RelativeLayout>

<TextView
    android:id="@+id/name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignLeft="@+id/dongtailistview_head"
    android:layout_below="@+id/dongtailistview_head"

    android:layout_centerVertical="@+id/dongtailistview_head"
    android:layout_marginTop="10dp"
    android:text="name"
    android:textColor="@color/white"
    android:textSize="13sp" />

</RelativeLayout>  

