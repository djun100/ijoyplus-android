<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF" >
	
     <Button
        android:id="@+id/close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/closereport"
        android:onClick="OnClickCloseReprot"
        android:padding="5dp" />
    
    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@id/close"
        android:maxLines="2"
        android:text="亲,请您告知我们您在看片过程中遇到那些问题,我们一定尽快改进" />

    <CheckBox
        android:id="@+id/checkbox1"
        android:layout_width="262dp"
        android:layout_height="44dp"
        android:layout_below="@id/text"
        android:button="@drawable/select"
        android:text="视频无法播放"
        android:textColor="#4A4A4A" />

    <CheckBox
        android:id="@+id/checkbox2"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@id/checkbox1"
        android:button="@drawable/select"
        android:text="影片播放不流畅"
        android:textColor="#4A4A4A" />

    <CheckBox
        android:id="@+id/checkbox3"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@id/checkbox2"
        android:button="@drawable/select"
        android:text="影片加载比较慢"
        android:textColor="#4A4A4A" />

    <CheckBox
        android:id="@+id/checkbox4"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@id/checkbox3"
        android:button="@drawable/select"
        android:text="影片不能下载"
        android:textColor="#4A4A4A" />

    <CheckBox
        android:id="@+id/checkbox5"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@id/checkbox4"
        android:button="@drawable/select"
        android:text="观看影片时出现闪退"
        android:textColor="#4A4A4A" />

    <CheckBox
        android:id="@+id/checkbox6"
        android:layout_width="274dp"
        android:layout_height="44dp"
        android:layout_below="@id/checkbox5"
        android:button="@drawable/select"
        android:text="画质不清晰 "
        android:textColor="#4A4A4A" />

    <CheckBox
        android:id="@+id/checkbox7"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@id/checkbox6"
        android:button="@drawable/select"
        android:text="音画不同步"
        android:textColor="#4A4A4A" />

    <LinearLayout
        android:id="@+id/textview2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/checkbox7"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="其他"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/problem_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="#AFAFAF"
            android:hint="请输入您的宝贵意见和建议..." />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textview2"
        android:gravity="center_horizontal" >

        <Button
            android:id="@+id/submitbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/submitbtn"
            android:onClick="OnClickSubmitProblem" />
    </LinearLayout>

</RelativeLayout>